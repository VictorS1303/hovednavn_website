---
import Layout from '../layouts/Layout.astro'
import ScrollToTopBtn from '../components/ScrollToTopBtn.astro'
import Hero from '../components/Hero.astro'
import {Image} from '@astrojs/image/components'
import landingPageBgImage from '../../src/images/landing_page/hero/hero_bg.jpg'

import Section from '../components/Section.astro'
import Overlay from '../components/Overlay.astro'
import SocialIconsContainer from '../components/SocialIconsContainer.astro'
import PageIntroText from '../components/PageIntroText.astro'
import ArtistCardsContainer from '../components/ArtistCardsContainer.astro'

const navItems = [
  {
    href: '/about',
    text: 'Om',
  },
  {
    href: '/music',
    text: 'Musik',
  },
  {
    href: '/concerts',
    text: 'Koncerter',
  },
]
---

<Layout navItems={navItems} pageIntroText=''>
  <Section class={`h-screen relative`} id='music'>
    <Hero
      heroHeaderText='Om'
      heroImageSrc='../src/images/concert/hero/hero_bg.png'
      heroImageAlt='hero about image'
    />
  </Section>
  <PageIntroText
    pageIntroText='Hej og velkommen til! Vi hedder Hovednavn og består af fem gutter, der holder af at spille musik sammen. Her på siden har du mulighed for at lære os bedre at kende - alt fra, hvordan Hovednavn blev til samt om os hver især personligt.'
  />

  <ArtistCardsContainer />
</Layout>
<ScrollToTopBtn />
