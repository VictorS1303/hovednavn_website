---
const {
  class: className,
  id: id,
  timelineCardTitle,
  timelineCardDescriptionText,
} = Astro.props
---

<details
  class='overflow-hidden bg-[var(--timeline-card-bg-color)] min-h-fit w-full px-6 py-4 text-md shadow-md rounded-lg'>
  <summary
    class='timeline-card-header flex items-center justify-between gap-4 cursor-pointer text-xl text-[var(--timeline-card-color)] font-bold'>
    {timelineCardTitle}
    <i class='fas fa-chevron-down peer-open:rotate-180'></i>
  </summary>

  <p
    class='timeline-card-description-text text-xl leading-snug tracking-wide w-[35ch] mt-6 text-[var(--timeline-card-color)] border-t-2 border-white pt-4 peer-hidden'>
    {timelineCardDescriptionText}
  </p>
</details>

<!-- Custom CSS to manage transitions and maintain width consistency -->
<style>
  /* When the details are open, the paragraph becomes visible */
  details[open] p {
    display: block;
    max-height: 500px;
    opacity: 1;
    transition:
      max-height 0.3s ease,
      opacity 0.3s ease;
  }

  details[open] i {
    transform: rotate(-180deg);
  }

  /* Initial state of the paragraph (hidden) */
</style>
