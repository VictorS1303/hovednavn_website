---
const {class: className, id: id} = Astro.props
---

<div
  class={`${className} flex flex-col items-center mx-auto py-6 rounded-2xl bg-[var(--record-player-bg-color)] w-[300px] h-[400px]`}>
  <div class='flex flex-col h-full items-center justify-start gap-8'>
    <!-- Vinyl container -->
    <div
      class='container vinyl-container relative h-[150px] w-[150px] bg-black rounded-full'
      id='vinyl_container'>
      <img
        src='../src/recordings/covers/default_cover.png'
        class='absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 h-full w-full p-2 object-cover'
        alt='default'
      />
    </div>

    <!-- Track data and controls container -->
    <div
      class='container track-data-container-and-controls-container'
      id='track_data_and_controls_container'>
      <div
        class='container track-data-container w-[200px] whitespace-nowrap'
        id='track_data_container'>
        <h3 class='track-title text-xl' id='track_title'>
          Velkommen til Danmark
        </h3>

        <!-- Progress bar -->
        <div class='w-full bg-white rounded-full h-2.5 mt-4'>
          <div
            class='bg-[var(--progress-bar-inner-bg-color)] h-2.5 rounded-full'
            style='width: 45%'>
          </div>
        </div>
        <div
          class='container length-info-container flex justify-between mt-2'
          id='length_info_container'>
          <h4 class='start-time track-duration-color' id='start_time'>0:00</h4>
          <h4 class='full-time track-duration-color' id='full_time'>4:03</h4>
        </div>
      </div>
    </div>

    <div
      class='container controls-container flex items-center justify-center h-[30px] w-full gap-4 -mt-2 outline-2 outline-white'
      id='controls_container'>
      <button class='btn control-btn previous-song-btn' id='previous_song_btn'>
        <i class='fa-solid fa-forward'></i>
      </button>
      <button
        class='btn control-btn play-pause-song-btn outline-2 outline-white'
        id='play_pause_song_btn'>
        <i class='fa-solid fa-play'></i>
      </button>
      <button class='btn control-btn next-song-btn' id='next_song_btn'>
        <i class='fas fa-forward'></i>
      </button>
    </div>
  </div>
</div>
