---
import Card from './Card.astro'
const {class: className, id: id} = Astro.props

const artistCardsData = [
  {
    artistName: 'Samuel Himmelstrup',
    artistImage: 'samuel_himmelstrup',
    artistBandRole: 'Sanger',
    id: 0,
  },
  {
    artistName: 'Mikkel Deleuran',
    artistImage: 'mikkel_deleuran',
    artistBandRole: 'Bassist',
    id: 1,
  },
  {
    artistName: 'Julian Falck',
    artistImage: 'julian_falck',
    artistBandRole: 'Trommeslager',
    id: 2,
  },
  {
    artistName: 'Lasse',
    artistImage: 'lasse',
    artistBandRole: 'Organist',
    id: 3,
  },
  {
    artistName: 'Anders',
    artistImage: 'anders',
    artistBandRole: 'Guitarist',
    id: 4,
  },
]
---

<div class='container artist-cards-container flex flex-col items-center gap-4 w-full' id='artist_cards_container'>
  {
    artistCardsData.map((artistCard, index) => (
      <a href={`/about/${index}`}>
        <Card
          class='artist-card'
          id={`artist-${index}`}
          src={`../src/images/about/about_cards/${artistCard.artistImage}.png`}
          isArtistCard={true}
          artistName={artistCard.artistName}
          artistBandRole={artistCard.artistBandRole}
        />
      </a>
    ))
  }
</div>
