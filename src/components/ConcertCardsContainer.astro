---
const {showOverlay} = Astro.props
import {concertCardsData} from '../js/concert_maps_data.js'
import Card from './Card.astro'
---

<div class='concert-cards-container flex flex-wrap justify-center mx-12'>
  {
    concertCardsData.map((concertCard) => (
      <Card
        class='m-4'
        src={`/images/concert/concert_cards/${concertCard.concertImage}.webp`}
        isConcertCard={true}
        showOverlay={showOverlay}
        concertDate={concertCard.concertDate}
        concertLocation={concertCard.concertLocation}
        concertPrice={concertCard.concertPrice}
        concertTarget={concertCard.concertTarget}
        concertEvent={concertCard.concertEvent}
        concertLocationCoordinates={concertCard.concertLocationCoordinates}
        concertCancelOverlayImage={concertCard.concertCancelOverlayImage}
        concertCancelOverlayText={concertCard.concertCancelOverlayText}
        isConcertCancelled={concertCard.isConcertCancelled}
      />
    ))
  }
</div>
